{
  "hosting": {
    "public": "./public",
    "headers": [
      {
        "source": "**/*.@(js|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ]
  },

  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "./public"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
